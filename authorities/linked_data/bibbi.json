{
  "QA_CONFIG_VERSION": "2.1",
  "prefixes": {
    "dcterms": "http://purl.org/dc/terms/",
    "bs": "https://schema.bs.no/"
  },
  "term": {
    "url": {
      "@context": "http://www.w3.org/ns/hydra/context.jsonld",
      "@type":    "IriTemplate",
      "template": "{term_uri}",
      "variableRepresentation": "BasicRepresentation",
      "mapping": [
        {
          "@type": "IriTemplateMapping",
          "variable": "term_uri",
          "property": "hydra:freetextQuery",
          "required": true,
          "encode": false
        }
      ]
    },
    "qa_replacement_patterns": {
      "term_id": "term_uri"
    },
    "term_id": "URI",
    "results": {
      "label_ldpath":    "skos:prefLabel ::xsd:string",
      "altlabel_ldpath": "skos:altLabel ::xsd:string",
      "sameas_ldpath":   "rdfs:sameAs ::xsd:anyURI",
      "broader_ldpath":  "skos:broader ::xsd:anyURI",
      "narrower_ldpath": "skos:narrower ::xsd:anyURI"
    }
  },
  "search": {
    "url": {
      "@context": "http://www.w3.org/ns/hydra/context.jsonld",
      "@type": "IriTemplate",
      "template": "https://vokabular.bs.no/rest/v1/bibbi/search?lang=nb&labellang=nb&type={subauth}&query=%22{query}%22&maxhits={maxRecords}",
      "variableRepresentation": "BasicRepresentation",
      "mapping": [
        {
          "@type": "IriTemplateMapping",
          "variable": "query",
          "property": "hydra:freetextQuery",
          "required": true,
          "encode": true
        },
        {
          "@type": "IriTemplateMapping",
          "variable": "subauth",
          "property": "hydra:freetextQuery",
          "required": false,
          "default": "skos:Concept"
        },
        {
          "@type": "IriTemplateMapping",
          "variable": "maxRecords",
          "property": "hydra:freetextQuery",
          "required": false,
          "default": "20"
        }
      ]
    },
    "qa_replacement_patterns": {
      "query":   "query",
      "subauth": "subauth"
    },
    "results": {
      "label_ldpath": "skos:prefLabel ::xsd:string",
      "sort_ldpath":  "skos:prefLabel ::xsd:string"
    },
    "subauthorities": {
      "topic":          "bs:Topic",
      "geographic":     "bs:Place",
      "event_name":     "bs:Event",
      "person":         "bs:Person",
      "personal_name":  "bs:Person",
      "person_subject": "bs:PersonAsSubject",
      "organization":   "bs:Corporation",
      "corporate_name": "bs:Corporation",
      "uniform_title":  "bs:Title",
      "form":           "bs:FormGenre"
    }
  }
}
